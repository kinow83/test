AT_SETUP([boolean negation])
AT_KEYWORDS([parseopt parseopt_bool parseopt28])
AT_CHECK([
PARSEOPT_DEFAULT
MU_PARSEOPT_NEGATION=no-
export MU_PARSEOPT_NEGATION
echo "# full option"
parseopt --no-headers
echo "# abbreviated option"
parseopt --no-header
],
[0],
[# full option
rc=0
file_name=(null)
opt_value=initial
x_option=0
a_option=0
headers_option=0
find_value=(null)
d_option=0
jobs=0
debug_level_value=0
debug_info_value=(null)
argv:
# abbreviated option
rc=0
file_name=(null)
opt_value=initial
x_option=0
a_option=0
headers_option=0
find_value=(null)
d_option=0
jobs=0
debug_level_value=0
debug_info_value=(null)
argv:
])
AT_CLEANUP
