AT_BANNER()

m4_pushdef([FORMAT],
[%(void(size))%<(gt 1000)%(divide 1000)m%?dnl
(gt 100)%(divide 100)c%|dnl
%(size)%> %(putnum)]) 

dnl ------------------------------------------------------------
dnl fmtcond([NAME], [INPUT], [STDOUT = `'])
dnl
m4_pushdef([FMTCOND],[
AT_SETUP([$1])
AT_KEYWORDS([format fmtcond fmtcnd00])
AT_DATA([msg],[$2])
AT_CHECK([fmtcheck -format 'FORMAT' msg
],
[0],
[$3])
AT_CLEANUP])

